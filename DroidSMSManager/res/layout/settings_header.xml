<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#ffffff"
  >
    <ImageView android:layout_width="70sp" android:layout_alignParentLeft="true" android:layout_marginLeft="10sp" android:layout_marginTop="10sp" android:id="@+id/imageView1Settings"  android:layout_height="70sp"></ImageView>
    <TextView android:textSize="20sp" android:textStyle="bold" android:text="TextView" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_marginTop="10sp" android:layout_toRightOf="@+id/imageView1Settings" android:layout_marginLeft="5sp" android:id="@+id/textView1Settings" android:layout_width="match_parent"></TextView>
    <TextView android:textSize="15sp"  android:text="TextView" android:layout_height="wrap_content" android:layout_marginTop="10sp" android:layout_below="@+id/textView1Settings" android:layout_toRightOf="@+id/imageView1Settings" android:layout_marginLeft="5sp" android:id="@+id/textView2Settings" android:layout_width="wrap_content"></TextView>
    <CheckBox android:id="@+id/checkBox1Settings"  android:layout_marginLeft="10sp" android:layout_below="@+id/textView1Settings"  android:layout_width="50sp" android:layout_height="50sp" android:layout_alignParentRight="true" ></CheckBox>
</RelativeLayout>
