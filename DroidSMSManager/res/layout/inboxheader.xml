<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dip"
    android:layout_marginRight="2dip"
    android:background="@drawable/listview_border" >

    <LinearLayout
        android:id="@+id/linfirst"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:background="#0165ec"
            android:paddingBottom="1dip"
            android:paddingLeft="3dip"
            android:paddingRight="3dip"
            android:paddingTop="1dip"
            android:text="Date"
            android:textColor="#fff"
            android:textSize="15sp" >
        </TextView>

        <TextView
            android:id="@+id/textView1time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="#0165ec"
            android:gravity="right"
            android:paddingBottom="1dip"
            android:paddingLeft="3dip"
            android:paddingRight="3dip"
            android:paddingTop="1dip"
            android:text="Time"
            android:textColor="#fff"
            android:textSize="15sp" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linfirst"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:paddingLeft="3dip"
            android:paddingRight="3dip"
            android:text="Message"
            android:textColor="#ffffff"
            android:textSize="18sp" >
        </TextView>

        <TextView
            android:id="@+id/textView1sender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="right"
            android:paddingLeft="3dip"
            android:paddingRight="3dip"
            android:text="Senders"
            android:textColor="#ffffff"
            android:textSize="18sp" >
        </TextView>
    </LinearLayout>

</RelativeLayout>